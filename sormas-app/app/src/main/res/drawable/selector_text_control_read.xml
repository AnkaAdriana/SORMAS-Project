<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="@dimen/textViewBorder"
                android:color="@color/blue"/>
            <solid
                android:color="@color/controlTextViewBackground"
                android:paddingLeft="@dimen/textViewLeftPadding"
                android:paddingTop="@dimen/textViewRightPadding"/>

            <corners android:radius="@dimen/textViewRadius" />
            <size android:height="@dimen/textViewHeight" />

            <padding
                android:left="@dimen/textViewLeftPadding"
                android:right="@dimen/textViewRightPadding" />
        </shape>
    </item>

    <!-- focused -->
    <item android:state_focused="true">

        <shape>
            <stroke
                android:width="@dimen/textViewBorder"
                android:color="@color/blue"/>
            <solid
                android:color="@color/controlTextViewBackground"
                android:paddingLeft="@dimen/textViewLeftPadding"
                android:paddingTop="@dimen/textViewRightPadding"/>

            <corners android:radius="@dimen/textViewRadius" />
            <size android:height="@dimen/textViewHeight" />

            <padding
                android:left="@dimen/textViewLeftPadding"
                android:right="@dimen/textViewRightPadding" />
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape>
            <solid
                android:color="@color/controlReadTextViewBackground"/>
        </shape>
    </item>
</selector>