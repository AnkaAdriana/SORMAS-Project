<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" android:top="-5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/drawerBottomControlPressed"/>
        </shape>
    </item>
    <item android:state_focused="true" android:top="-5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/drawerBottomControlFocused"/>
        </shape>
    </item>
    <item android:top="-5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/drawerBottomControlBackground"/>
        </shape>
    </item>
</selector>