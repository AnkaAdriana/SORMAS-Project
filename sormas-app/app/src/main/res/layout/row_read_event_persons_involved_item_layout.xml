<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="data" type="de.symeda.sormas.app.backend.event.EventParticipant"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="fill"
        android:paddingLeft="@dimen/rowListItemHorizontalMargin"
        android:paddingRight="@dimen/rowListItemHorizontalMargin"
        android:background="@drawable/selector_list_activity_row_background"
        >

        <!--android:clickable="true"
        android:onClick="@{(view) -> callback.onListItemClick(view, position, data)}"-->
        <LinearLayout
            android:id="@+id/rowListItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/rowListItemVerticalPadding"
            android:paddingBottom="@dimen/rowListItemVerticalPadding"
            android:background="@drawable/background_list_activity_row"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCaseUuid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/listActivityRowTertiaryTextSize"
                    android:textColor="@color/listActivityRowLeastText"
                    android:fontFamily="sans-serif-medium"
                    app:value="@{data.uuid}"
                    app:shortUuid="@{true}"
                    app:defaultValue='@{@string/case_uuid_unknown}'
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="fill"
                android:layout_gravity="fill">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtPersonName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/listActivityRowPrimaryTextSize"
                        android:textColor="@color/listActivityRowPrimaryText"
                        android:fontFamily="sans-serif-medium"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:value="@{data.person.toString()}"
                        app:valueFormat="@{@string/dummy_format}"
                        app:defaultValue='@{@string/person_unknown}'
                        />

                    <TextView
                        android:id="@+id/txtInvolvementDesc"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:layout_marginBottom="@dimen/listActivityRowSecondaryTextMarginBottom"
                        android:textSize="@dimen/listActivityRowSecondaryTextSize"
                        android:textColor="@color/listActivityRowSecondaryText"
                        app:value="@{data.involvementDescription.toString()}"
                        app:defaultValue='@{@string/involvement_desc_unknown}'
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/listActivityRowTertiaryTextSize"
                            android:textColor="@color/listActivityRowTertiaryText"
                            android:fontFamily="sans-serif-medium"
                            app:value="@{data.person.sex.toString()}"
                            app:valueFormat="@{@string/dummy_format}"
                            app:defaultValue='@{@string/gender_unknown}'
                            />

                        <ImageView
                            android:layout_width="@dimen/separatorThickness"
                            android:layout_height="match_parent"
                            android:background="@color/listActivityRowTopCaptionSeparator"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="@dimen/contentHorizontalSpacing"
                            android:layout_marginRight="@dimen/contentHorizontalSpacing" />

                        <TextView
                            android:id="@+id/txtAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/listActivityRowTertiaryTextSize"
                            android:textColor="@color/listActivityRowLeastText"
                            android:fontFamily="sans-serif-medium"
                            app:value="@{data.person.approximateAge}"
                            app:appendValue="@{data.person.approximateAgeType.toString()}"
                            app:valueFormat="@{@string/two_words_spaced_format}"
                            app:defaultValue='@{@string/age_unknown}'
                            />

                    </LinearLayout>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="24dp"
                    >

                    <ImageView
                        android:id="@+id/imgSyncIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:tint="@color/syncIconListActivityRowItem"
                        android:scaleType="fitEnd"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>


                <ImageView
                    android:id="@+id/imgGoToReadView"
                    android:layout_width="@dimen/listGoToIconWidth"
                    android:layout_height="@dimen/listGoToIconHeight"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_go_to_read_view_24dp"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>